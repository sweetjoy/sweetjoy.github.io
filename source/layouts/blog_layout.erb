  <body class="<%= page_classes %>">

    <%= partial "navbar" %>

    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1><%= current_article.title%></h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a>
                        </li>
                        <li><%= link_to "Blog", '../index.html' %>
                        </li>
                        <li><%= current_article.data.categoria %></li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <div id="content">
      <div class="container">
        <div class="row">
        <!-- *** LEFT COLUMN ***
_________________________________________________________ -->

          <div class="col-md-12" id="blog-post">


              <p class="text-muted text-uppercase mb-small text-right">Por <a href="#"><%=current_article.data.autor %></a> | <%= current_article.date.strftime("%d/%m/%y")%></p>
              <p class="lead"><%= current_article.data.textointro %></p>

              <div id="post-content">

                  <% if current_page.data.youtubecode? %>
                    <div class="video-post">
                        <div class="embed-responsive embed-responsive-4by3">
                            <iframe class="embed-responsive-item" src="<%= current_article.data.youtubecode %>"></iframe>
                        </div>
                    </div>
                  <% else %>
                    <p>
                       <!--  <img src="img/blog2.jpg" class="img-responsive" alt="Example blog post alt"> -->
                       <%= image_tag current_article.data.image, class:"img-responsive" %>
                    </p>
                  <% end %>

              <%= yield %>

              </div>
              <!-- /#post-content -->

