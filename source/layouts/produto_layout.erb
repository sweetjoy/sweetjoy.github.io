<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="robots" content="all,follow">
    <meta name="googlebot" content="index,follow,snippet,archive">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="brigadeiros bolos festa doces confeitaria">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Sweet Joy por Joy Alves" %></title>

    <%= stylesheet_link_tag "all" %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">

    <%= partial "navbar" %>

    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1><%= current_article.data.nome %></h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a>
                        </li>
                        <li><a href="../../">Produtos</a>
                        </li>
                        <li> <a href="<%= categoria_path(current_article.data.categoria) %>"><%= current_article.data.categoria %></a>
                        <li><%=current_article.data.nome%></li>
                    </ul>

                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="heading">
                        <h3>Descrição</h2>
                    </div>

                    <p class="lead"><%=current_article.data.descrição%></p>
                </div>
            </div>
            <div class="row portfolio-project">

                <section>
                    <div class="col-sm-8">
                        <div class="project owl-carousel">
                          <% current_article.data.image.each do |image| %>
                            <div class="item">
                                <img src='../../../../images/<%=image%>' alt="" class="img-responsive">
                            </div>
                          <% end %>
                        </div>
                        <!-- /.project owl-slider -->

                    </div>

                    <div class="col-sm-4">
                        <div class="project-more">
                          <% sum = 9 %>
                          <% while sum < current_article.data.count + 1 %>
                            <h4><%= current_article.data.keys[sum] %></h4>
                            <p><%= current_article.data[current_article.data.keys[sum]] %></p>
                            <% sum += 1 %>
                          <% end %>
                        </div>
                    </div>

                </section>

                <section>

                    <div class="col-sm-12">

                        <div class="heading">
                            <h1>Detalhes</h1>
                        </div>

                        <%= yield %>
                    </div>
                </section>

            </div>

        </div>
        <!-- /.container -->


    </div>
    <!-- /#content -->
    <div id="get-it">
        <div class="container encomenda">
            <div class="col-md-8 col-sm-12">
                <h3>Faça sua encomenda</h3>
            </div>
            <div class="col-md-4 col-sm-12">

                <h4><i class="fa fa-whatsapp" aria-hidden="true"></i> 41 96937334 </h3>
                <h5><i class="fa fa-envelope" aria-hidden="true"></i> adm@sweetjoy.com.br </h3>

            </div>
        </div>
    </div>
    <%= partial "footer" %>
    <%= javascript_include_tag  "all" %>
  </body>
</html>

